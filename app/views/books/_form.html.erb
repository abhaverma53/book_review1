<%= simple_form_for @book do |f|%>
<%= select_tag(:category_id, options_from_collection_for_select(Category.all, :id, :name), include_blank: "Select Category")%>
	<%= f.file_field :book_img %>
	<%= f.input :title, label: "Book Titel" %>
	<%= f.input :description %>
	<%= f.input :author %>
	<%= f.button :submit %>
<%end%>
